<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
 
  <!-- Define properties -->
  <Properties>
    <Property name="basePath">./logs</Property>
  </Properties>

  <Appenders>
    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
     
        <PatternLayout pattern ="%style{%d{HH:mm:ss.SSS}}{cyan} [%t] %highlight{%-5level} %style{%logger{36}}{magenta}{%X{testName}] - %msg%n"/>
    </Console>

    <!-- Rolling File Appender using properties -->
    <RollingFile name="File" fileName="${basePath}/automation.log" 
    filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log">
       <PatternLayout Pattern="%d{HH:mm:ss.SSS} [%t] %-5level %loggger{36} - %msg%n"/>
         <SizeBasedTriggeringPolicy size="5000"/>
         </RollingFile>


  </Appenders>

  <Loggers>
    <!-- Root logger references the console and rolling appenders -->
    <Root level="INFO"> <!-- Here you can use multiple log levels All < Trace < Debug < Info < Warn < Error < Fatal < Off  -->
    
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>

</Configuration>

